{
  "name": "@scrabble-solver/backend",
  "version": "2.0.0-alpha.5",
  "description": "Scrabble Solver - Backend",
  "main": "src/index.js",
  "engines": {
    "node": ">=7.9.0"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "start": "better-npm-run start",
    "start:prod": "better-npm-run start:prod"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf dist && webpack",
      "env": {
        "API_URL": "http://localhost:5000/api",
        "NODE_ENV": "production"
      }
    },
    "build:prod": {
      "command": "rimraf dist && webpack",
      "env": {
        "API_URL": "http://kamilmielnik.com:5000/api",
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "webpack",
      "env": {
        "API_URL": "http://localhost:5000/api",
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "node dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilmielnik/scrabble-solver.git"
  },
  "author": {
    "name": "Kamil Mielnik",
    "email": "kamil.adam.mielnik@gmail.com",
    "url": "http://kamilmielnik.com/"
  },
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/kamilmielnik/scrabble-solver/issues"
  },
  "homepage": "https://github.com/kamilmielnik/scrabble-solver#readme",
  "dependencies": {
    "@scrabble-solver/configs": "^2.0.0-alpha.5",
    "@scrabble-solver/logger": "^2.0.0-alpha.5",
    "@scrabble-solver/models": "^2.0.0-alpha.5",
    "@scrabble-solver/solver": "^2.0.0-alpha.5",
    "@scrabble-solver/trie": "^2.0.0-alpha.5",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-loader": "^8.0.6",
    "better-npm-run": "0.1.1",
    "rimraf": "^2.6.3",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "gitHead": "c4701e646e0102875dc7d0e14dc0055fd375253d"
}
