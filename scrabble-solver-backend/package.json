{
  "name": "scrabble-solver-backend",
  "version": "1.4.1",
  "description": "Scrabble Solver - Backend",
  "main": "src/index.js",
  "engines": {
    "node": ">=7.9.0"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "start": "better-npm-run start",
    "start:prod": "better-npm-run start:prod",
    "test": "better-npm-run test",
    "test:debug": "better-npm-run test:debug",
    "test:watch": "better-npm-run test:watch"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf dist && webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:prod": {
      "command": "rimraf dist && webpack",
      "env": {
        "NODE_ENV": "production",
        "API_HOST": "http://kamilmielnik.com",
        "API_PORT": "5000"
      }
    },
    "start": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "node dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "jest --no-cache --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:debug": {
      "command": "node --inspect-brk node_modules/.bin/jest --runInBand --watch",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:watch": {
      "command": "jest --no-cache --watch",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilmielnik/scrabble-solver.git"
  },
  "author": {
    "name": "Kamil Mielnik",
    "email": "kamil.adam.mielnik@gmail.com",
    "url": "http://kamilmielnik.com/"
  },
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/kamilmielnik/scrabble-solver/issues"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-http-proxy": "^1.5.1",
    "lodash": "^4.17.11",
    "scrabble-solver-commons": "file:../scrabble-solver-commons"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-loader": "^8.0.6",
    "better-npm-run": "0.1.1",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2"
  }
}
